<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_order_form_ext1" model="ir.ui.view">
            <field name="name">view.order.form.ext1</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/sheet/notebook/page/field/form/group//field[@name='product_uom']" position="replace">
						<field name="product_uom_category_id" invisible="1"/>
	                    <field name="product_uom" groups="product.group_uom" class="oe_inline oe_no_button"
	                    	domain="[('category_id', '=', product_uom_category_id)]"
	                        on_change="product_uom_change(parent.pricelist_id,product_id,product_uom_qty,product_uom,product_uos_qty,product_uos,name,parent.partner_id, False, False, parent.date_order, context)"/>
					</xpath>
                    <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='product_uom']" position="replace">
						<field name="product_uom_category_id" invisible="1"/>
						<field name="product_uom"
							domain="[('category_id', '=', product_uom_category_id)]"
						    on_change="product_uom_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, context)"
						    groups="product.group_uom" options='{"no_open": True}'/>
					</xpath>
				</data>
            </field>
        </record>
        
    </data>
</openerp>
