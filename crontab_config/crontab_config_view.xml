<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="crontab_config_form" model="ir.ui.view">
            <field name="name">crontab.config.form</field>
            <field name="model">crontab.config</field>
            <field name="arch" type="xml">
                <form string="Crontab Configuration" version="7.0"> 
                    <header>
                        <button name="action_button_confirm" class="oe_highlight" states="draft" string="Confirm" type="object" groups="base.group_user"/>
                         <button name="action_button_execute" class="oe_highlight"  confirm="Are you sure to executing?" states="confirm" string="Execute" type="object" groups="base.group_user"/>
                        <button name="action_button_cancel" states="confirm" string="Cancel" type="object" groups="base.group_user"/>
                        <field name="state" widget="statusbar"/>
                	</header>
                    <group>
                    	<field name="name"/>
                    	<field name="note"/>
                    </group>                    
                    	
                    	<group>
                    	    
                    				<group>
                    					<div class="address_format">
                    						<label  string="Minute" class="oe_inline"/> 
                    						<label string="hour" class="oe_inline"/>  
                    						<label string="day" class="oe_inline"/>
                     						<label string="month" class="oe_inline"/>    
                     						<label string="week" class="oe_inline"/> 
                     					</div>
                    				</group>			 
                    				<group>                    					
                    					<div class="address_format">
                    					<field name="minute" nolabel="1" class="oe_inline"/>                    					                   				
                    					<field name="hour" nolabel="1" class="oe_inline"/>                            					
                    					<field name="day" nolabel="1" class="oe_inline"/>                            					
                    					<field name="month" nolabel="1" class="oe_inline"/>                            					
                    					<field name="week" nolabel="1" class="oe_inline"/>                            					
                    					</div>
                    				</group>
                    			           		                   		                 		
                    	</group>
                    	
                    			<!--label for="minute" string="Minute"/>   
                     			<label for="hour"   string="hour"/>
                     			<label for="day"   string="day"/>
                     			<label for="month"   string="month"/>
                     			<label for="week"   string="week"/-->     					 
                     <group>
                    	<field name="working_path"/>
                    	<field name="command"/>
                     </group>
                     <group>
                    	<field name="active"/>
                    	<field name="last_exec"/>
                     </group>
                </form>
           </field>
        </record>
        
        <record id="crontab_config_tree" model="ir.ui.view">
            <field name="name">crontab.config.tree</field>
            <field name="model">crontab.config</field>
            <field name="arch" type="xml">
                <tree string="Sales PreQuotation">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="last_exec"/>
                </tree>
            </field>
        </record>
        
        <record id="view_crontab_search" model="ir.ui.view">
            <field name="name">crontab.config.search</field>
            <field name="model">crontab.config</field>
            <field name="arch" type="xml">
            	<search string="Crontab Config">
            		<field name="name" filter_domain="[('name','ilike',self)]"/>
                    <separator/>
                    <filter icon="terp-document-new" string="Draft PreQuotations" name="active" domain="[('active','=',True)]"/>
            	</search>
            </field>
        </record>

        <record id="action_crontab_config" model="ir.actions.act_window">
            <field name="name">Crontab Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crontab.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="search_view_id" ref="view_crontab_search"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a crontab configuration that can be automatic running job on OS System. 
              </p>
              <p>
                OpenERP will help you efficiently handle the schedule :
                Backup and Restore database.
              </p>
            </field>
        </record>
        
        <menuitem action="action_crontab_config" id="menu_crontab_config" parent="base.menu_ir_cron" sequence="11"/>

    </data>
</openerp>