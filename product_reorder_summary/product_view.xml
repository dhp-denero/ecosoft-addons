<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>        
        <record id="product_reorder_tree_view" model="ir.ui.view">
            <field name="name">product.reorder.tree_ext</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">    	
            	<xpath expr="/tree/field[@name='qty_available']" position="after">
                  <field name="qty_reorder" invisible="not context.get('reorder_flag',False)"/> 
                  <field name="qty_diff_reroder" invisible="not context.get('reorder_flag',False)"/>  	             	  
				</xpath>           					
            </field>
        </record>
    </data>
</openerp>
