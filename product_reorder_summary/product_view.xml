<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_product_tree_view_ext" model="ir.ui.view">
            <field name="name">product.product.tree_ext</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
            	<xpath expr="//tree[@string='Products']" position="attributes">
					<attribute name="colors">red:qty_diff_reroder and qty_diff_reroder&lt;0</attribute>
				</xpath>            	
            	<xpath expr="/tree/field[@name='qty_available']" position="after">
                  <field name="qty_reorder"/> 
                  <field name="qty_diff_reroder"/>  	             	  
				</xpath>           					
            </field>
        </record>
    </data>
</openerp>
