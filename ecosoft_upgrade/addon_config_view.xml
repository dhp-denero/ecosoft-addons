<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Modules -->
        <record id="addon_config_form" model="ir.ui.view">
            <field name="name">addon.config.form</field>
            <field name="model">addon.config</field>
            <field name="arch" type="xml">
                <form string="Add-on Config" version="7.0">
                    <group>
                        <group>
                            <field name="name" on_change="onchange_name(name)"/>
                            <field name="bzr_source"/>
                            <field name="root_path"/>
                            <field name="production_path"/>
                            <field name="note"/>
                        </group>      
                        <group>
                        </group>                  
                    </group>
                </form>
            </field>
        </record>
        <record id="addon_config_tree" model="ir.ui.view">
            <field name="name">addon.config.tree</field>
            <field name="model">addon.config</field>
            <field name="arch" type="xml">
                <tree string="Add-on Config">
                    <field name="name"/>
                    <field name="bzr_source"/>
                </tree>
            </field>
        </record>
        <record id="open_addon_config_tree" model="ir.actions.act_window">
            <field name="name">Add-on Config</field>
            <field name="res_model">addon.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_installed':1}</field>
            <field name="help" type="html">
              <p><b>No Add-On found!</b></p>
              <p>You should try others search criteria.</p>
            </field>
        </record>
        <menuitem id="menu_addon_config_tree" parent="base.menu_management" name="Add-on Config" sequence="60" action="open_addon_config_tree" />
    </data>
</openerp>
