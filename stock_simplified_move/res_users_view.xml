<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_users_form_ext" model="ir.ui.view">
            <field name="name">view.users.form.ext</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <data>     
					<xpath expr="/form/sheet/notebook/page[@string='Access Rights']" position="after">
                        <page string="Locations for Simplified Move Form">
                            <group col="4">
                                <field name="location_ids"/>
                            </group>
                        </page>					
					</xpath>
                </data>
            </field>
        </record>
	</data>
</openerp>
